<Page x:Class="examApp.Views.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:examApp.Views.Pages"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center" Width="250">
            <TextBlock>Авторизуйтесь пж!!!!!</TextBlock>
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="loginTB"/>
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="passwordPB"/>
            <Button x:Name="loginBtn" Content="войти" Click="loginBtnClick" Margin="10"/>
            <Button x:Name="guestBtn" Content="я гость" Click="guestBtnClick" Margin="10"/>
        </StackPanel>

    </Grid>
</Page>
